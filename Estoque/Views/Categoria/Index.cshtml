
<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var item in ViewBag.Categorias)
            {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nome</td>
            <td align="right">
                <button type="button" class="btn btn-info btn-sm" onclick="location.href='@Url.Action("Editar", "Categoria", @item)'">
                    Editar
                </button>

                <button type="button" class="btn btn-danger btn-sm" onclick="location.href='@Url.Action("Excluir", "Categoria", @item)'">
                    Excluir
                </button>
            </td>
        </tr>
        }
            </tr>
        </tbody>
    </table>
    <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Cadastrar", "Categoria")'">Novo</button>


