@model IList<Estoque.Models.Produto>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Quantidade</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@Html.RouteLink(item.Nome, "DetalheProduto", new { id = item.Id })</td>
                <td>@item.Quantidade</td>
            </tr>
            }
        </tr>
        </tbody>
</table>
